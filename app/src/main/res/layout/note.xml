<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff63ecff"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingLeft="14dp"
    android:paddingTop="2dp"
    android:paddingRight="14dp"
    android:paddingBottom="14dp"
    android:onClick="onExpandNote"
    android:clickable="false">

    <TextView
        android:id="@+id/path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="folder1/folder2"
        android:textSize="10dp"
        android:gravity="right"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test title"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test test test test"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/expanded_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="expansion"
        android:visibility="gone"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_expand_note"
        android:onClick="onExpandNote"
        android:layout_gravity="right"
        android:clickable="false"
        />

    <TextView
        android:id="@+id/contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_contract_note"
        android:onClick="onContractNote"
        android:layout_gravity="right"
        android:clickable="false"
        android:visibility="gone"
        />

</LinearLayout>
</LinearLayout>